<?xml version="1.0" encoding="UTF-8"?>
<config version="1.0" code="admin" prefix="plugin.admin"> <!-- префикс для ключей конфига и языковых переменных -->
  <info>
    <name>
      <lang name="default">Admin panel</lang>
    </name>
    <author>
      <lang name="default">LiveStreet Developers Team</lang>
    </author>
  </info>
  
  <requires>
    <livestreet>1.0.*</livestreet>
  </requires>
  
  <parameters>
  
    <!--
      Пример для параметра целочисленного типа
    -->
    <parameter>
      <code>elements_per_page</code>                                          <!-- системное имя параметра -->
      <type>integer</type>
      <value>15</value>                                                       <!-- базовое значение -->
      <range>                                                                 <!-- только для целочисленных типов, значения от и до, либо enum/item -->
        <min>0</min>
        <max>100</max>
      </range>
      <name>                                                                  <!-- отображаемое имя параметра, ключ языкового файла -->
        config_parameters.elements_per_page.name
      </name>
      <description>                                                           <!-- отображаемое описание параметра, ключ языкового файла -->
        config_parameters.elements_per_page.description
      </description>
    </parameter>
    
    <!--
      Пример для параметра строкового типа
    -->
    <parameter>
      <code>hello_message</code>                                          <!-- системное имя параметра -->
      <type>string</type>
      <value>hello, livestreet</value>
      <validator>                                                             <!-- проверка значения из формы -->
        <type>string</type>
        <regexp>#\w+#iUu</regexp>
      </validator>
      <range>                                                                 <!-- только для строковых типов, длина от и до -->
        <min>10</min>
        <max>100</max>
      </range>
      <name>                                                                  <!-- отображаемое имя параметра, ключ языкового файла -->
        config_parameters.hello_message.name
      </name>
      <description>                                                           <!-- отображаемое описание параметра, ключ языкового файла -->
        config_parameters.hello_message.description
      </description>
    </parameter>
    
    
    <!--
      Пример для параметра булевого типа
    -->
    <parameter>
      <code>for_admins</code>                                          <!-- системное имя параметра -->
      <type>bool</type>
      <value>1</value>
      <name>                                                                  <!-- отображаемое имя параметра, ключ языкового файла -->
        config_parameters.hello_message.name
      </name>
      <description>                                                           <!-- отображаемое описание параметра, ключ языкового файла -->
        config_parameters.hello_message.description
      </description>
    </parameter>
    
    
    <!--
      Пример для параметра типа массив, вложенные массивы - как параметры
    -->
    <parameter>
      <code>router</code>                                          <!-- системное имя параметра -->
      <type>array</type>
      <array>                                                       <!-- только для массива -->
        <item>
          <key>page</key>
          <value>ActionPage</value>
        </item>
        <item>
          <key>index</key>
          <value>Actionindex</value>
        </item>
        <item>
          <key>block</key>
          <value>
          
            <!-- вложенный массив -->
                
            <parameter>
              <code>block</code>                                          <!-- системное имя параметра, в данном случае - КЛЮЧА -->
              <type>array</type>
              <array>                                                       <!-- только для массива -->
                <item>
                  <key>key2</key>
                  <value>val2</value>
                </item>
                <item>
                  <key>key3</key>
                  <value>val3</value>
                </item>
              </array>
              <name>                                                                  <!-- отображаемое имя параметра, ключ языкового файла -->
                config_parameters.hello_message.name
              </name>
              <description>                                                           <!-- отображаемое описание параметра, ключ языкового файла -->
                config_parameters.hello_message.description
              </description>
            </parameter>
          
          
          </value>
        </item>
      
      </array>
      <name>                                                                  <!-- отображаемое имя параметра, ключ языкового файла -->
        config_parameters.hello_message.name
      </name>
      <description>                                                           <!-- отображаемое описание параметра, ключ языкового файла -->
        config_parameters.hello_message.description
      </description>
    </parameter>
    
    
  </parameters>
    
</config>





